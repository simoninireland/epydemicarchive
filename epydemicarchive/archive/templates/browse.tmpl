{% extends 'base.tmpl' %}

{% block app_content %}
  <h1>Browse the archive</h1>

  <table class="table">
    <thead>
      <tr>
	<th scope="col">UUID</th>
	<th scope="col">Owner</th>
	<th scope="col">Title</th>
	<th scope="col">Tags</th>
      </tr>
    </thead>
    <tbody>
      {% for n in networks %}
	<tr>
	  <td>
	    <a href="{{ url_for('archive.edit', id=n.id) }}">{{ n.id }}</a></td>
	  <td>{{ n.owner.email }}</td>
	  <td>{{ n.title }}</td>
	  <td>
	    {% with tags = n.tagnames() %}
	      {%if tags %}
		<div class="btn-group" role="group" aria-label="tags">
		  {% for tag in tags %}
		    <button type="button" class="btn btn-default">{{ tag }}</button>&nbsp;
		  {% endfor %}
		</div>
	      {% endif %}
	    {% endwith %}
	  </td>
	</tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
