{% extends 'base.tmpl' %}

{% block app_content %}
  <h1>User profile for {{ profile.user.email }}</h1>

  <form action="" method="post" novalidate>
    {{ form.hidden_tag() }}
    <p>
      {{ form.name.label }}<br>
      {{ form.name(size=64) }}<br>
    </p>
    <p>
      {{ form.affiliation.label }}<br>
      {{ form.affiliation(size=64) }}<br>
    </p>
    <p>
      {{ form.url.label }}<br>
      {{ form.url(size=32) }}<br>
    </p>
    <p>
      {{ form.bio.label }}<br>
      {{ form.bio(size=128) }}<br>
    </p>
    <p>
      {{ form.submit() }} &nbsp; {{ form.cancel() }}
    </p>
  </form>
{% endblock %}
